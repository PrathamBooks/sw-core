<% if @story.errors.count != 0 %>
$('#story_publish_form').html("<%= escape_javascript(render(:partial=>"publish"))%>");	
$(document).ready(function() {
	$('#publishModal').modal({
		show: true
	});
	var varnam = new VarnamIME($("#publishModal #story_title")[0], null, {name: '<%= @story.language.name %>'}, '<%= Settings.varnam.url %>').init();
	});
<% else %>
 <% if @is_campaign_page == true %>
  var url = "<%= contest_path(:id => @contest.id) %>"
 <% elsif @story.derivation_type == "translated" %>
  var url = "<%= react_stories_path(:slug => @story.parent.id, :translateToLanguage => @story.language.name) %>"
 <% else %>
  var url = "<%= root_path %>"
 <% end %>
 window.location.replace(url.replace(/&amp;/g, '&'));
<% end %>
