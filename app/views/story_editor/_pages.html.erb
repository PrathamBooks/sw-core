<p class="font-sm text-bold"><%=t 'editor.editor_page.pages'%></p>
<div class="sc-sidebar-pages grey-cloud-bg">
  <div class="sc-sidebar-page-wrap scrollbar-custom">
    <%= render :partial => "/story_editor/pages_ribbon" %>
  </div>  <!-- /sc-sidebar-page-wrap -->
  <!--<div class="sc-sidebar-page-count font-sm-x"><em>7 of 23</em></div>-->
</div> <!-- /sc-sidebar-page-block -->
<div class="spacing-v"></div>
<div>
    <span id="insert_pages" class="icon-round-wrap icon-round-wrap-brand icon-left <%= @story.is_derivation? ? 'disabled' : '' %> <%= @story.is_translated? ? 'hide' : '' %>" data-toggle="collapse" data-target="#multipage-option"><span class="icon-round fa fa-plus"></span></span>
    <span class="sidebar-page-action-text <%= @story.is_translated? ? 'hide' : '' %>"><%=t 'editor.editor_page.insert_pages'%></span>
  <div id="multipage-option" class="collapse">
   <div>
      <button class="btn btn-app btn-brand-1 font-sm no-page" name="minus">
        <i class="fa fa-minus" aria-hidden="true"></i>
      </button>
      <input type="text" id="numberOfPages" placeholder="0" value="1" disabled>
      <button class="btn btn-app btn-brand-1 font-sm no-page" name="add">
        <i class="fa fa-plus" aria-hidden="true"></i>
      </button>
   </div>
   <div>
     <span id="insert_page" class="btn btn-app btn-brand-1 font-sm <%= @story.is_derivation? ? 'disabled' : '' %>" data-toggle="collapse" data-target="#multipage-option"><%= t 'dashboard.ok'%></span>
   </div>
  </div>
</div>
<div>
  <span id="duplicate_page" class="icon-round-wrap icon-round-wrap-brand icon-left"><span class="icon-round fa fa-copy"></span>
    <span class="duplicate_tooltip">
      <%=t 'editor.editor_page.duplicate_tooltip_1'%>
      <br>
      <%=t 'editor.editor_page.duplicate_tooltip_2'%>
    </span>
  </span>
  <span class="sidebar-page-action-text">
    <%=t 'editor.editor_page.duplicate'%> 
    <span class="duplicate_tooltip">
      <%=t 'editor.editor_page.duplicate_tooltip_1'%>
      <br>
      <%=t 'editor.editor_page.duplicate_tooltip_2'%>
    </span>
  </span>
</div>
  <div>
    <div>
      <span id="delete_page" class="icon-round-wrap icon-round-wrap-brand icon-left"><span class="icon-round fa fa-trash-o"></span></span>
      <span class="sidebar-page-action-text"><%=t 'editor.editor_page.delete'%></span>
    </div>
  </div>
<script type="text/javascript">
$(document).ready(function() {
  var numberOfPages = $('#numberOfPages');
  $('.no-page').click(function() {
    var currentValue = parseInt(numberOfPages.val())
    if (this.name === "add") {
      if ((currentValue + 1) < 20) {
        numberOfPages.val(currentValue + 1)
      }
    } else {
      if ((currentValue - 1) > 0) {
        numberOfPages.val(currentValue - 1)
      }
    }
  })
});
</script>
