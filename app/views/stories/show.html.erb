    <div class="col-md-4 col-sm-12">
      <a class="stories-link <%= disable_class %>" href="<%= story_page_path(@story, @story.pages.first)%>" data-remote=true>
        <%if @story.winner.present? %>
          <%if @story.contest.present? %>
