<h1>Create new Story</h1>
<div class="row">
  <div class="col-md-12">
    <%= simple_form_for @story, html: { class: 'form-horizontal',  multipart: true } do |f| %>
      <%= f.input :title %>
      <%= f.input :orientation, collection: %w(landscape portrait) %>
      <%= f.association :language %>
      <%= f.input :reading_level, collection: Story::READING_LEVELS.keys %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
