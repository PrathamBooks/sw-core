<script type="text/javascript">
$(window).load(function() {
  <% @story.pages.each do |page| %>
      <% illustration = page.illustration_crop %>
      <% if illustration %>
        $.preload("<%= illustration.url(Illustration.get_style(@viewport_width)) %>");
        $.preload("<%= illustration.url(Illustration.get_style(@viewport_height)) %>");
      <% end %>
    <% end %>
});
</script>

