<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h2 class="modal-title text-left">Stories selected for bulk download</h2>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body modal-body-app">
      <div class="row">
        <table class="table table-striped">
          <thead>
            <tr class="table-heading-row">
              <th></th>
              <th>Story title</th>
              <th>Language</th>
              <th>Level</th>
            </tr>
          </thead>
          <tbody class="table-row-details">
            <% stories.each do|story| %>
              <tr>
                <td><input  class="final_selected_stories" data-story-id="<%=story.id%>" type="checkbox" name="selected_for_bulk" checked="checked"></td>
               <td><%= story.title %></td>
               <td><%= story.language.name %></td>
               <td><%= story.reading_level %></td>
              </tr> 
            <% end %>  
         </tbody>
        </table>
      </div> <!-- /row -->        
    </div> <!-- /modal-body -->
    <div class="modal-footer">
        <p id="validated_selected"> Please select atleast one story for download.</p>
      <div class="row row-gutter">
        <div class="text-right footer-container">
          <span class="gutter-sm-x vertical-i-top spacing-half-v">
            <span class="btn btn-app btn-brand-1" id="download_ok">Ok</span>
          </span>
          <span class="gutter-sm-x vertical-i-top spacing-half-v">
            <span class="btn btn-app btn-brand-1" id="cancel">Cancel</span>
          </span>
        </div>
      </div>
    </div> <!-- /modal-footer -->
  </div> <!-- /modal-content -->
</div> <!-- /modal-dialog -->