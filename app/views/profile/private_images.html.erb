<%= render :partial => "tabs" %>
<div role="tabpanel" class="tab-pane user_dashboard user_private_img" id="profile-drafts">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      	<tr class="table-heading-row">
          <th><%= t "dashboard.illustration"%></th>
          <th><%= t "dashboard.title"%></th>
          <th><%= t "dashboard.actions"%></th>
      	</tr>
      </thead>
      <tbody class="table-row-details">	
        <% @illustrations.each do|illustration| %>
         <tr class="user_dashboard_row">
     		 <td><a href="<%= illustration_path(illustration) %>"><img src="<%= illustration.image.url(:search) %>" height="100px" /></a>
     		 </td>
            <td class="underline-class"><%= link_to illustration.name, illustration_path(illustration)  %></td>
  	     <td><%= button_to "Make Public", make_image_public_path(:id => illustration.id),:method=>:get, class: "btn btn-info user_dashboard_edit-btn" %></td>
         </tr>
        <% end %>
      </tbody>
     </table>
  </div>
</div>
<%= paginate @illustrations %>
