<script>
    $('#camp_audio_btn').click(function() {
      $('#camp_audio_did').trigger("play");
    });
    $('#camp_hindi_audio').click(function() {
      $('#camp_audio_did_new').trigger("play");
    });
    $('#close_did').click(function() {
      $('#myModal_did').modal('hide'); 
      $('#camp_audio_did').trigger("pause");
      var audio = document.getElementById("camp_audio_did");
        audio.currentTime = 0;
    });
    $('#close_did_new').click(function() {
      $('#myModal_did_new').modal('hide'); 
      $('#camp_audio_did_new').trigger("pause");
      var audio = document.getElementById("camp_audio_did_new");
        audio.currentTime = 0;
    });
    $('#myModal_did_new').on('hidden.bs.modal', function (e) {
      $('#myModal_did_new').modal('hide'); 
      $('#camp_audio_did_new').trigger("pause");
      var audio = document.getElementById("camp_audio_did_new");
        audio.currentTime = 0;
    });
    $('#myModal_did').on('hidden.bs.modal', function (e) {
      $('#myModal_did').modal('hide'); 
      $('#camp_audio_did').trigger("pause");
      var audio = document.getElementById("camp_audio_did");
        audio.currentTime = 0;
    });
</script>