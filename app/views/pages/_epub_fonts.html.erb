<style type='text/css'> 
<% font_type = @story.language.language_font.font%>
<% fontType  = font_type.gsub(/\s+/, "")%>
@font-face {
	font-family:'Noto Sans';
	src: url('fonts/NotoSans/Regular/NotoSans-Regular_gdi.woff');
	font-weight: 400;
	font-style: normal;
	font-stretch: normal;
	unicode-range: U+000D-2666;
}
@font-face {
	font-family:'Noto Sans';
	src: url('fonts/NotoSans/Italic/NotoSans-Italic_gdi.woff');
	font-weight: 400;
	font-style: italic;
	font-stretch: normal;
	unicode-range: U+000D-2666;
}
@font-face {
	font-family:'Noto Sans';
	src: url('fonts/NotoSans/Bold/NotoSans-Bold_gdi.woff');
	font-weight: 700;
	font-style: normal;
	font-stretch: normal;
	unicode-range: U+000D-2666;
}
@font-face {
	font-family:'Noto Sans';
	src: url('fonts/NotoSans/BoldItalic/NotoSans-BoldItalic_gdi.woff')
	font-style: italic;
	font-stretch: normal;
	unicode-range: U+000D-2666;
}
<% if (['NotoNastaliqUrdu', "NotoSansMongolian", "NotoSansOlChiki"].include? fontType)%>
    @font-face{
		font-family: <%= font_type%> ;
		src: url('<%="fonts/#{fontType}/#{fontType}-Regular.woff"%>');
		font-weight: 400;
		font-style:normal;
	}    
<% elsif fontType != 'NotoSans'%>
	@font-face{
		font-family: <%= font_type%> ;
		src: url('<%="fonts/#{fontType}/Regular/#{fontType}-Regular.woff"%>');
		font-weight: 400;
		font-style:normal;
	}
	@font-face{
		font-family: <%= font_type%> ;
		src: url('<%="fonts/#{fontType}/Bold/#{fontType}-Bold.woff"%>');
		font-weight: 700;
		font-style:normal;
	}
<% end%>
 </style>