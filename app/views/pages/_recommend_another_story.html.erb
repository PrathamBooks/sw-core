<div
  id="<%= (page==@page)? 'selected_page':'' %>"
  class="<%= (page!=@page)? 'other-pages':'' %> page-container-<%= page.page_template.orientation %> story-page recommended_page">
  <div class="top-section">
    <section class="carousel-thumbnail">
      <div class="row slider-carousel common-style">
        <label class="<%= page.page_template.orientation %>_back_to_story">Back to story page</label>
        <% if similar_stories.any? %>
          <h2>If you liked this, you will also like <i class="fa fa-circle"></i> <i class="fa fa-circle"></i> <i class="fa fa-circle"></i></h2>
          <div class="<%= page.page_template.orientation %>_recommended_story_container">
            <ul class="bxslider1 story-slides <%= page.page_template.orientation %>_recommended_story_ui">
              <% similar_stories.each do |story|%>
                <li>
                  <div class="carousel-img lands <%= page.page_template.orientation %>_recommended_image">
                  <a href="<%= react_stories_show_path(story.url_slug) %>" target="_blank"><img src="<%= story.image_url %>"></a>
                  </div>
                  <div class="carousel-content <%= page.page_template.orientation %>_recommended_carousal">  
                    <h3><a class="title" href="<%= react_stories_show_path(story.url_slug) %>" target="_blank"><%= story.title %></a></h3>
                     <h6><%= story.language %> | Reading Level <%= story.reading_level %></h6>
                  </div>  
                </li>
              <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </section>
</div>
</div>