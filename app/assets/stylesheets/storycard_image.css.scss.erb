// Story Card Image Page design
#edit-story-cover-header {
  font-size: 1.5rem;
  margin: 1rem 0.75rem;

  i {
    font-size: 1rem;
  }
}
#storycard-crop-container{
  margin: 0 0.75rem;
  background: #f2f2f2;
  padding: 0.5rem;
  border: 1px solid #d5d5d5;
  border-radius: 0.5rem;
  margin-bottom: 1rem;
}
#storycard-crop{
  margin:auto;
  position: relative;
}

#img-container{
  margin: auto;
  position: absolute;
}

.storycard-crop-window{
  position: absolute;
  width: calc(100% - 6rem);
  overflow: hidden;
  top: 52.4px;
  left: 41px;
}

#storycard-cropper-container {
  position: relative;
  height: 100%;
}
  
#storycard-cropper{
  position:absolute;
  top: 0;
  left: 210px;
  border: solid 0px rgba(0,0,0,0.6);
  border-color: rgba(0,0,0,0.6);
  border-style: solid;
}

.storycard__slider--style{
  text-align: center;
}

.storycard__slider-small-image--position {
  margin-top: 1.4rem;
  margin-right: 0.5rem;
  vertical-align: top;
  width: 22px;
  opacity: 0.54;
}
.storycard__slider-big-image--position {
  margin-top: 1.1rem;
  margin-left: 0.5rem;
  vertical-align: top;
}

#range-selector {
  width: 12rem;
  margin: auto;
  margin-top: 2rem;
  margin-bottom: 1.5rem;
  display: inline-block;
}

#storycard-crop-image-container{
  border: solid 1px black;
  background: white;
  overflow: scroll;
  height: 408px;
}
#range-selector{
  height: 1px;
  left: 0;
}
#storycard-image-magnify{
  top: -0.625rem;
  border-radius: 50%;
}
#storycard-crop-suggestion-text{
  font-family: Raleway;
  font-size: 0.75rem;
  margin: 0 9.3%;
  text-align: center;
}


#upload-image{
  left: 0.75rem;
  background-color: #ffc855;
}
  
.storycard__upload-icon--space {
  margin: 8px;
}

.storycard__upload-text--space {
  margin-right: 0.5rem;
}

#storycard-img-edit-done{
  width: 5.7rem;
  left: 54.8%;
  background-color: #ffc855;
}

.storycard__done-btn-icon--style{
  width: 1.5rem;
  height: 1.5rem;
  margin: 0.5rem;
}
.storycard__done-btn-text--space{
  margin-right: 1rem;
}

#storycard-close-btn{
  width: 6rem;
  left: 56.8%;
  background: #f9f9f9;
  border: solid 1px #d2d2d2;
}


.storycard__close-btn-icon--style{
  width: 1.5rem;
  height: 1.5rem;
  margin: 0.5rem;
}

.storycard__close-btn-text--space{
  margin-right: 1rem;
}


.btn-storycard{
  position: relative;
  height: 2.5rem;
  border-radius: 0.5rem;
}

.btn-storycard-fs{
  padding: 0;
  font-size: 0.75rem;
  font-weight: bold;
}
  
.card-display {
  display: none;
}

.page-display{
  display: inherit;
}

#storycard_form .card-display {
  display: inherit;
}

#storycard_form .page-display {
  display: none;
}


